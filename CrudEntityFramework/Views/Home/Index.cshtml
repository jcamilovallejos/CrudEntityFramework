@model IEnumerable<CrudEntityFramework.Models.Usuario>
@{
    ViewData["Title"] = "Home Page";
}

<h1 class="text-center">CRUD usuarios</h1>
<div class="row">
    <div class="col-12">
        <div class="float-right">
            <a asp-action="Create" asp-controller="Home" class="btn btn-success">
                <i class="fas fa-plus"></i>Nuevo Usuario
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card border">
            <div class="card-header">
                <h3><strong>Lista de Usuarios</strong></h3>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                @if (Model.Count() > 0)
                {
                    <table class="table table-bordered" id="tablaUsuarios" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <td>@Html.DisplayNameFor(m => m.Nombre)</td>
                                <td>@Html.DisplayNameFor(m => m.Telefono)</td>
                                <td>@Html.DisplayNameFor(m => m.Celular)</td>
                                <td>@Html.DisplayNameFor(m => m.Email)</td>
                                <td></td>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(m => item.Nombre)</td>
                                    <td>@Html.DisplayFor(m => item.Telefono)</td>
                                    <td>@Html.DisplayFor(m => item.Celular)</td>
                                    <td>@Html.DisplayFor(m => item.Email)</td>
                                    <td>
                                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                                        <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Mostar</a>
                                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p>No hay registros</p>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts
{ 
    <script>
        $(document).ready(function () {
            $('#tablaUsuarios').DataTable({
                'paging': true,
                'info': true,
                'filter': true
            });
        });
    </script>
}